<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".fragments.SliderFragment">

    <ImageView
        android:id="@+id/sliderImageView"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/preview_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/slider_image"/>

    <Button
        android:id="@+id/sliderUploadBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/upload_slider"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:paddingVertical="16dp"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderImageView"/>


</androidx.constraintlayout.widget.ConstraintLayout>