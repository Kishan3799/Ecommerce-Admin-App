<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_margin="4dp"
    android:background="@drawable/category_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/categoryItemImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="null"/>

    <TextView
        android:id="@+id/categoryItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Puma"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/categoryItemImage"
        app:layout_constraintStart_toEndOf="@+id/categoryItemImage"
        app:layout_constraintTop_toTopOf="@+id/categoryItemImage" />
</androidx.constraintlayout.widget.ConstraintLayout>